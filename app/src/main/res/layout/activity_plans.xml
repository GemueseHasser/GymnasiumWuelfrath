<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlansActivity">
    <Button
            android:text="@string/btn_sekI"
            android:layout_width="213dp"
            android:layout_height="0dp" android:id="@+id/sekI"
            android:backgroundTint="#C61111"
            app:layout_constraintTop_toBottomOf="@+id/toolbarPlan" android:layout_marginBottom="82dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/sekII"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:background="#C4C6CF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarPlan"
            app:logo="@mipmap/ic_gym"
            app:layout_constraintTop_toTopOf="parent"
            app:titleMarginStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:titleTextAppearance="@style/ToolbarStyle"
            app:menu="@menu/menu" android:layout_marginBottom="167dp" app:layout_constraintBottom_toTopOf="@+id/sekI"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:id="@+id/navPlan"
            app:layout_constraintTop_toBottomOf="@+id/toolbarPlan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="#2196F3"
            android:background="#2196F3"
            app:menu="@menu/navigation"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="@string/btn_sekII"
            android:layout_width="213dp"
            android:layout_height="0dp" android:id="@+id/sekII"
            android:backgroundTint="#C61111"
            app:layout_constraintTop_toBottomOf="@+id/sekI" android:layout_marginBottom="229dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>